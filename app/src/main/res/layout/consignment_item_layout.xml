<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7pt"
    app:cardElevation="5pt"
    android:layout_marginStart="@dimen/five_dp"
    android:layout_marginEnd="@dimen/five_dp"
    android:layout_marginTop="@dimen/five_dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/basicDetails"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hundred_fifty_dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ArticleName"
                android:layout_margin="@dimen/ten_dp"
                android:textColor="@color/red"
                android:fontFamily="@font/fredoka"
                android:textStyle="bold"
                android:textSize="@dimen/eighteen_sp"
                android:maxLength="200"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/toCounty_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:text="to: Country"
                android:layout_marginStart="@dimen/ten_dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/ten_dp"
                android:fontFamily="@font/fredoka"/>

            <TextView
                android:id="@+id/productType_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:text="Product Type"
                android:layout_marginStart="@dimen/ten_dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/ten_dp"
                android:fontFamily="@font/fredoka"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/twenty_dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/blue"/>

            <ImageView
                android:id="@+id/statusImage"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_margin="@dimen/five_dp"
                android:src="@drawable/under_process"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Under Process"
                android:fontFamily="@font/fredoka"
                android:textColor="@color/black"/>




        </LinearLayout>




    </RelativeLayout>


</androidx.cardview.widget.CardView>